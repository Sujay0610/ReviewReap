# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-mini

# Resend Email Configuration
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# WhatsApp Business API Configuration
# These will be configured per organization in the database
# WHATSAPP_ACCESS_TOKEN=client-specific-token
# WHATSAPP_PHONE_NUMBER_ID=client-specific-phone-number-id
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Google APIs Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MY_BUSINESS_API_KEY=your-google-my-business-api-key

# Application Configuration
APP_NAME=Review Automation SaaS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Background Job Configuration
WORKER_CONCURRENCY=4
JOB_TIMEOUT=300
JOB_RETRY_ATTEMPTS=3

# Security Configuration
SECRET_KEY=your-secret-key-for-encryption
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ENABLED=true

# Feature Flags
AI_PERSONALIZATION_ENABLED=true
EMAIL_INTEGRATION_ENABLED=true
WHATSAPP_INTEGRATION_ENABLED=true
GOOGLE_REVIEWS_ENABLED=true

# Development Configuration
RELOAD=true
HOST=0.0.0.0
PORT=8000